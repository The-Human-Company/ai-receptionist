{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "extraction-index.schema.json",
  "title": "Extraction Index",
  "description": "Schema for tracking extraction sources (internal use only - not exposed in queries)",
  "type": "object",
  "properties": {
    "extractions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["extraction_ref", "source_type", "extracted_at"],
        "properties": {
          "extraction_ref": {
            "type": "string",
            "description": "Unique extraction reference ID",
            "pattern": "^ext_[0-9]+$"
          },
          "source_type": {
            "type": "string",
            "enum": ["expert_lecture", "clinical_discussion", "review_presentation", "case_report"],
            "description": "Type of source (NOT specific name)"
          },
          "source_hash": {
            "type": "string",
            "description": "Hash of source content for deduplication"
          },
          "extracted_at": {
            "type": "string",
            "format": "date-time",
            "description": "When extraction was performed"
          },
          "facts_extracted": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of facts extracted from this source"
          },
          "nodes_updated": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of node IDs updated by this extraction"
          },
          "enriched": {
            "type": "boolean",
            "description": "Whether enrichment was performed"
          },
          "enriched_at": {
            "type": "string",
            "format": "date-time"
          },
          "processing_notes": {
            "type": "string",
            "description": "Any notes from processing"
          }
        }
      },
      "description": "Map of extraction_ref to extraction metadata"
    }
  }
}
